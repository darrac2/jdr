{% extends 'base.html.twig' %}

{% block title %}ForumCommentaire index{% endblock %}

{% block body %}
    <h1>ForumCommentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Date_creation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forum_commentaire in forum_commentaires %}
            <tr>
                <td>{{ forum_commentaire.id }}</td>
                <td>{{ forum_commentaire.text }}</td>
                <td>{{ forum_commentaire.dateCreation ? forum_commentaire.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_forum_commentaire_show', {'id': forum_commentaire.id}) }}">show</a>
                    <a href="{{ path('app_forum_commentaire_edit', {'id': forum_commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
