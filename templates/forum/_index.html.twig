{% block body %}
    <section style="height: 400px;">
    <div class="container" style="margin-top: 40px;margin-right: auto;width: 1000px;margin-left: auto;background: #1d1e1e;border-radius: 12px;min-height: 168px;height: 168px;">
        


        {% for forum_commentaire in forum_commentaires %}

        
            <div class="row" style="height: 100px;">
                <div class="col-xl-10" style="min-height: 100px;">
                    <div style="height: 30px;">
                        <p style="color: #ededed;margin-left: 15px;margin-top: 10px;">{{ forum_commentaire.text }}</p>
                    </div>
                </div>
                <div class="col-xl-2">
                    <div style="width: 24px;margin-top: 10px;margin-left: 93px;height: 24px;"><button class="btn btn-primary" type="button" style="height: 24px;width: 24px;background: url('reply-fill.svg') no-repeat;background-size: cover;border-style: none;filter: invert(91%);margin-left: 0px;"></button></div>
                    <div style="width: 24px;height: 24px;margin-left: 93px;"><button class="btn btn-primary" type="button" style="height: 24px;width: 24px;background: url('exclamation-triangle-fill.svg');background-size: cover;border-style: none;filter: invert(91%);margin-top: 15px;margin-left: 0px;"></button></div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-1">
                    <div style="height: 50px;width: 55px;margin-right: 0px;"><a class="btn btn-primary ms-md-2" role="button" href="#" style="background: url('person.svg') no-repeat, #ededed;background-size: cover, auto;width: 40px;height: 40px;color: var(--bs-navbar-color);border-radius: 50px;padding-left: 6px;padding-top: 3px;padding-right: 4px;margin-top: 10px;margin-right: 0px;margin-left: 0px;border-width: 2px;border-color: #ededed;"></a></div>
                </div>
                <div class="col-xl-2">
                    <p style="color: #ededed;font-size: 18px;margin-left: 0px;">{{ forum_commentaire.user.pseudo }}</p>
                    <p style="color: #ededed;margin-left: 0px;margin-top: -15px;">{{ forum_commentaire.dateCreation ? forum_commentaire.dateCreation|date('Y-m-d') : '' }}</p>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
    </div>
</section>
    
{% endblock %}
