{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <header style="min-height: 250px;">
    <div class="container" style="margin-top: 40px;margin-right: auto;width: 1000px;margin-left: auto;background: #212529;border-radius: 12px;">
        <div class="row" style="height: 65px;">
            <div class="col" style="height: 65px;width: 50px;">
                <div></div>
                <p style="color: #ededed;font-size: 24px;margin-left: 15px;margin-bottom: 0px;margin-top: 10px;text-align: center;">{{ forum.titre }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col" style="min-height: 200px;">
                <div style="color: #ededed;margin-left: 15px;margin-top: 10px;">
                    {{ forum.description | raw }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-1">
                <div style="height: 50px;width: 55px;margin-right: 0px;"><a class="btn btn-primary ms-md-2" role="button" href="#" style="background: url('person.svg') no-repeat, #ededed;background-size: cover, auto;width: 40px;height: 40px;color: var(--bs-navbar-color);border-radius: 50px;padding-left: 6px;padding-top: 3px;padding-right: 4px;margin-top: 10px;margin-right: 0px;margin-left: 0px;border-width: 2px;border-color: #ededed;"></a></div>
            </div>
            <div class="col-xl-2">
                <p style="color: #ededed;font-size: 18px;margin-left: 0px;">{{ forum.user.pseudo }}</p>
                <p style="color: #ededed;margin-left: 0px;margin-top: -15px;">{{ forum.dateCrea ? forum.dateCrea|date('Y-m-d') : '' }}</p>
            </div>
            <div class="col-xl-7">
                <p style="font-size: 20px;margin-bottom: 0px;margin-top: 20px;color: #ededed;margin-left: 0px;text-align: right;padding-top: 7px;padding-left: 0px;padding-right: 0px;margin-right: -95px;">{{ forum.liker }}</p>
            </div>
            <div class="col">
                <div style="margin-top: 20px;width: 58px;margin-left: 84px;"><img src="/assets/img/heart.svg" style="height: 34px;border-style: none;filter: invert(91%);margin-left: 0px;" /></div>
            </div>
        </div>
    </div>
</header>
    <section>
        
        


        {% for forum_commentaire in forum_commentaires %}

            <div class="container" style="margin-top: 40px;margin-right: auto;width: 1000px;margin-left: auto;background: #1d1e1e;border-radius: 12px;min-height: 168px;height: 168px;">
            <div class="row" style="height: 100px;">
                <div class="col-xl-10" style="min-height: 100px;">
                    <div style="height: 30px;color: #ededed;">
                        <p style="margin-left: 15px;margin-top: 10px;">{{ forum_commentaire.text | raw }}</p>
                    </div>
                </div>
                <div class="col-xl-2">
                    <div style="width: 24px;margin-top: 10px;margin-left: 93px;height: 24px;">
                    <button class="btn btn-primary" type="button" style="height: 24px;width: 24px;background: url('reply-fill.svg') no-repeat;background-size: cover;border-style: none;filter: invert(91%);margin-left: 0px;"></button></div>
                    <div style="width: 24px;height: 24px;margin-left: 93px;">
                    <button class="btn btn-primary" type="button" style="height: 24px;width: 24px;background: url('exclamation-triangle-fill.svg');background-size: cover;border-style: none;filter: invert(91%);margin-top: 15px;margin-left: 0px;"></button></div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-1">
                    <div style="height: 50px;width: 55px;margin-right: 0px;">
                    <a class="btn btn-primary ms-md-2" role="button" href="#" style="background: url('person.svg') no-repeat, #ededed;background-size: cover, auto;width: 40px;height: 40px;color: var(--bs-navbar-color);border-radius: 50px;padding-left: 6px;padding-top: 3px;padding-right: 4px;margin-top: 10px;margin-right: 0px;margin-left: 0px;border-width: 2px;border-color: #ededed;"></a></div>
                </div>
                <div class="col-xl-2">
                    <p style="color: #ededed;font-size: 18px;margin-left: 0px;">{{ forum_commentaire.user.pseudo }}</p>
                    <p style="color: #ededed;margin-left: 0px;margin-top: -15px;">{{ forum_commentaire.dateCreation ? forum_commentaire.dateCreation|date('Y-m-d') : '' }}</p>
                </div>
            </div>
        </div>
        {% else %}
            <div>
            </div>
        {% endfor %}

    </section>
    <section style="min-height: 600px;">
    {{ include('forum_commentaire/_form.html.twig') }}
    </section>

    
{% endblock %}
