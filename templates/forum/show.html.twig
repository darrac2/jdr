{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <header style="height: 250px;">
    <div class="container" style="margin-top: 40px;margin-right: auto;width: 1000px;margin-left: auto;background: #212529;border-radius: 12px;min-height: 235px;height: 235px;">
        <div class="row" style="height: 65px;">
            <div class="col" style="height: 65px;width: 50px;">
                <div></div>
                <p style="color: #ededed;font-size: 24px;margin-left: 15px;margin-bottom: 0px;margin-top: 10px;text-align: center;">{{ forum.titre }}</p>
            </div>
        </div>
        <div class="row" style="height: 100px;">
            <div class="col" style="min-height: 100px;">
                <div style="height: 30px;">
                    <p style="color: #ededed;margin-left: 15px;margin-top: 10px;">{{ forum.description }}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-1">
                <div style="height: 50px;width: 55px;margin-right: 0px;"><a class="btn btn-primary ms-md-2" role="button" href="#" style="background: url('person.svg') no-repeat, #ededed;background-size: cover, auto;width: 40px;height: 40px;color: var(--bs-navbar-color);border-radius: 50px;padding-left: 6px;padding-top: 3px;padding-right: 4px;margin-top: 10px;margin-right: 0px;margin-left: 0px;border-width: 2px;border-color: #ededed;"></a></div>
            </div>
            <div class="col-xl-2">
                <p style="color: #ededed;font-size: 18px;margin-left: 0px;">{{ forum.user.pseudo }}</p>
                <p style="color: #ededed;margin-left: 0px;margin-top: -15px;">{{ forum.dateCrea ? forum.dateCrea|date('Y-m-d') : '' }}</p>
            </div>
            <div class="col-xl-7">
                <p style="font-size: 20px;margin-bottom: 0px;margin-top: 20px;color: #ededed;margin-left: 0px;text-align: right;padding-top: 7px;padding-left: 0px;padding-right: 0px;margin-right: -95px;">{{ forum.liker }}</p>
            </div>
            <div class="col">
                <div style="margin-top: 20px;width: 58px;margin-left: 84px;"><img src="/assets/img/heart.svg" style="height: 34px;border-style: none;filter: invert(91%);margin-left: 0px;" /></div>
            </div>
        </div>
    </div>
</header>

    <a href="{{ path('app_forum_index') }}">back to list</a>

    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}">edit</a>
     {{ render(controller(
        'App\\Controller\\ForumCommentaireController::forumindex',
        {'id' : forum.id }
    )) }}

    {{ include('forum_commentaire/_form.html.twig') }}
    
    
{% endblock %}
