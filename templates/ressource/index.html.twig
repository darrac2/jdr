{% extends 'base.html.twig' %}

{% block title %}Ressource index{% endblock %}

{% block body %}
    <h1>Ressource index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Fichier</th>
                <th>Description</th>
                <th>Image</th>
                <th>Status</th>
                <th>Private</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.id }}</td>
                <td>{{ ressource.titre }}</td>
                <td>{{ ressource.fichier }}</td>
                <td>{{ ressource.description }}</td>
                <td>{{ ressource.image }}</td>
                <td>{{ ressource.status }}</td>
                <td>{{ ressource.private }}</td>
                <td>
                    <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}">show</a>
                    <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ressource_new') }}">Create new</a>
{% endblock %}
