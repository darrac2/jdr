{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <header class="mb-5 pb-0" style="margin: 0px;padding: 0px;height: 1040px;">
        <div class="container" style="display: table; margin-bottom: 0px;margin-top: 89px;background: #212529;border-radius: 6px;height: 151px;width: 800px;min-height: 151px;">
            <div class="row">
                <div class="col-xl-2" style="height: 150px;">
                {% if user.profilImage == null  %}
                    <a class="btn btn-primary ms-md-2" role="button" href="#" style="background: url('person.svg') no-repeat, #ededed;background-size: cover, auto;width: 100px;height: 100px;color: var(--bs-navbar-color);border-radius: 50px;padding-left: 6px;padding-top: 3px;padding-right: 4px;margin-top: 20px;margin-right: 0px;margin-left: 0px;border-width: 2px;border-color: #ededed;"></a>
                {% else %}
                <img class=""  src="{{ user.profilImage }}" style="background-size: cover, auto;width: 100px;height: 100px;color: var(--bs-navbar-color);border-radius: 50px;padding-left: 6px;padding-top: 3px;padding-right: 4px;margin-top: 20px;margin-right: 0px;margin-left: 0px;border-width: 2px;border-color: #ededed;"></img>
                {% endif %}
                </div>
                <div class="col">
                    <h1 class="" style="color: #ededed;margin-top: 10px;">{{ user.pseudo }}</h1>
                    <p style="height: 123px;margin-top: 15px;color: #ededed;">{{ user.description |raw }} </p>
                </div>
            </div>

        </div>
        <div class="container" style="margin-bottom: 0px;margin-top: 89px;background: #212529;border-radius: 6px;padding-bottom: 25px;width: 800px;min-height: 0px;">
            <div class="row">
                <div class="col">
                    <p style="color: #ededed;text-align: center;font-size: 26px;margin-top: 13px;">VOTRE BIBLIOTHÃˆQUE</p>
                </div>
            </div>

            <div class="row" style="">
            {% for ressource in ressources %}
            {% if ressource.user == app.user %}
                <div class="col">
                    <div class="card" style="background: #212529;width: 209.312px;margin-left: 20px; margin-top: 35px;">
                    <img class="card-img-top w-100 d-block fit-cover" style="height: 207.328px;border-radius: 5px;width: 207.328px;" href="{{ path('app_ressource_show', {'id': ressource.id}) }}" src="{{ressource.image}}" width="354" height="200" />
                        <div style="border-radius: 5px;margin-top: -39px;background: #1d1e1e;opacity: 0.50;height: 39px;">
                            <p style="color: #ededed;height: 40px;text-align: center;"><a style="text-decoration: none;" href="{{ path('app_ressource_show', {'id': ressource.id}) }}">{{ ressource.titre }}</a></p>
                        </div>
                    </div>
                </div>
            {% endif %}
                
            {% endfor %}
                
        </div>
    </header>

{% endblock %}
